<header class="header">
    <div class="">
        {{> logo}}
    </div>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{>nav list=header}}
        </div>
    </nav>
</header>    

<main class="main">
    {{#with info}}
        <div class="info">
            <h1 class="info_title">{{title}}</h1>
            <p class="info_description">{{description}}</p>
        </div>
    {{/with}}

    {{#with form}}
        <form class="form">
            <h2 class="form_title">{{title}}</h2>

            <div class="form_input_list">
                {{#each inputs}}
                <input type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" class="form_input"
                id="form-input-{{id}}">
                {{/each}}
            </div>

            <div class="form_checkbox">
                <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
                <div></div>
                <label for="{{checkbox.name}}">{{checkbox.label}}</label>
            </div>

            <button type="submit" class="form_button">{{button}}</button>
            <p class="form_info">{{info}}</p>
        </form>
    {{/with}}
</main>

{{#with updates}}
    <div class="updates">
        <h2 class="updates_title">{{title}}</h2>
    
        {{> updatesList data=this}}
        
        <a href="{{show_all.url}}" class="show_all_link">{{show_all.text}}</a>     
    </div>
{{/with}}

<div class="expirience">
    {{#with expirience}}
    <div class="expirience_content">
        <strong class="expirience_title">{{title}}</strong>
        <badge class="expirience_badge">{{badge}}</badge>
    </div>

         {{> expirienceList data=this}}
         
    {{/with}}
</div>

<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
        <div>
            <span class="footer_title">{{title}}</span>
             {{> nav list=links isVertical=true}}
        </div>
    {{/each}}
</footer>
 

