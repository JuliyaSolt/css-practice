{{#with data}}
    <div class="card">
        <div>
            <badge><img src="{{photo}}" alt="Articles photo" class="articles_image" id="{{id}}"></badge>
            <h4 class="articles_name">{{name}}</h4>
            <p class="articles_description">{{description}}</p>
            <a class="button articles_button" href="{{path}}">Read All</a>
        </div>
    </div>
{{/with}}        